@font-face
	font-family Lexend
	src url("/Lexend.woff2") format("woff2")
	font-display swap

main
	padding-top 2rem
	a
		color cyan
		@media (prefers-color-scheme: light)
			color blue
		text-decoration-color transparent
		text-underline-offset 0.75rem

		transition all 0.15s, text-underline-offset 0.2s, color 0s

		&:visited
			color palevioletred
			@media (prefers-color-scheme: light)
				color purple
		&:hover
			color red
			text-decoration-color red
			text-underline-offset 0.1rem
		&:active
			color yellow
			text-decoration-color yellow
			@media (prefers-color-scheme: light)
				color orange
				text-decoration-color orange
			text-underline-offset 0.1rem

	video
	img
		max-width 800px
		max-height 600px
		border-radius 0.75rem
		padding 0.2rem

	blockquote
		margin-left 0.5rem
		padding 0.5rem 0 0.5rem 1rem
		border-left 0.2rem solid rgba(136, 136, 136, 0.667)
		font-style italic

		blockquote
			margin-left 0rem

		*
			margin 0
			opacity 0.8

#docs
	li
		padding-bottom 0.75rem
	a // make em look like butttons
		box-sizing border-box
		display inline
		padding 0.25rem 0.5rem
		text-decoration underline
		text-underline-offset auto

		transition all 0.25s

		background transparent
		color var(--light)
		border-radius 0.3rem

		&:hover
			background var(--light)
			color var(--dark)
			border-radius 0.6rem
			text-decoration-color var(--light)

.notification
	border-bottom 2px solid #777

	p
		margin 0
		padding 0.5rem 0 0.2rem 0
		border-radius 1rem
		text-align center

.additions
	border 1px solid #464443
	border-radius 1rem
	padding 0rem 1rem
	
	h2
		text-align center

hr
	border none
	border-top 1px solid #464443

:root
	--light: white
	--dark: black
	--bg: black
	@media (prefers-color-scheme: light)
		--light: black
		--dark: white
		--bg: #ddd

body
	background var(--bg)
	color var(--light)
	max-width 800px
	margin 2rem auto
	padding 0 1rem
	font-family Lexend, sans-serif

#title
	font-size 1.5rem
	font-weight 300
	color var(--light)
	text-decoration none
	transition all 0.15s

a#title:hover
	opacity 0.7

#maintitle
	display inline
	margin 0

#navcontainer
	display flex
	align-items center
	justify-content space-between

nav
	display flex
	gap 1rem

	a // make em look like butttons
		box-sizing border-box
		display inline-block
		padding 0.5rem 0.9rem
		text-decoration none

		transition all 0.25s

		background var(--bg)
		color var(--light)
		border 1px solid var(--light)
		border-radius 0.5rem

		&:hover
			background var(--light)
			color var(--dark)
			border 1px solid var(--bg)
			border-radius 0.75rem